<table class="margin-top">
  <thead>
    <th scope="col">Articles</th>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr id="article_<%= article.id %>">
        <td>
          <h4><%= link_to article.title, article_path(article.slug) %></h4>
          <h5><%= article.subtitle %></h4>
          <br>
          <%= truncate(article.content, length: 300, escape: false) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @articles %>
