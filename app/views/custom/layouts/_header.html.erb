<header>

  <div class="top-links">
    <div class="row">
      <!-- <%= render "shared/locale_switcher" %> -->
      <div class="hide-for-small-only">
        <%= render "shared/top_links" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="title-bar" data-responsive-toggle="responsive_menu" data-hide-for="medium">
      <button class="menu-icon" type="button" data-toggle="responsive_menu"></button>
      <div class="title-bar-title"><%= t("application.menu")%></div>
    </div>

    <div class="top-bar">
      <ul class="menu show-for-small-only">
        <li class="menu-text">
          <%= link_to root_path, accesskey: "0" do %>
            <%= image_tag(image_path_for("logo_header.png"),
                          class: "float-left logo",
                          size: "48x48",
                          alt: t("layouts.header.logo"),
                          title: setting["org_name"]) %>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="top-bar" id="responsive_menu">
      <div class="top-bar-left">
        <ul class="menu">
          <li class="menu-text">
            <%= link_to root_path, class: "hide-for-small-only", accesskey: "0" do %>
              <%= image_tag(image_path_for("logo_header.png"),
                            class: "hide-for-small-only float-left logo",
                            size: "100x100",
                            alt: t("layouts.header.logo"),
                          title: setting["org_name"]) %>
            <% end %>
          </li>
        </ul>
      </div>

      <div class="top-bar-right">
        <ul class="dropdown menu hide-for-small-only" data-dropdown-menu>
          <%= render "shared/admin_login_items" %>
          <%= render "devise/menu/login_items" %>
        </ul>
      </div>

      <div class="show-for-small-only">
        <div class="subnavigation row subnavigation-sm">
          <%= render "shared/subnavigation_sm" %>
          <%= render "shared/admin_login_items_sm" %>
          <%= render "devise/menu/login_items_sm" %>
          <%= render "shared/top_links_sm" %>
        </div>
      </div>
    </div>
  </div>

  <div class="subnavigation expanded">
    <div class="row">
      <div class="hide-for-small-only">
        <%= render "shared/subnavigation" %>
      </div>
      <div class="small-12 medium-3 column">
        <%= yield :header_addon %>
      </div>
    </div>
  </div>

</header>
